#!/bin/bash

# Calls graphviz to turn exported .dot files into interactive .svg 

# Make sure you have at least Graphviz v11.

# ${1} = remote
# ${2} = local
if [ -f "${1}/.lastgraph" ]; then
  find "${1}" -iname *.dot -cnewer "${1}/.lastgraph" | parallel --no-notice dot -Tsvg {} -o {.}.svg
else 
  find "${1}" -iname *.dot | parallel --no-notice dot -Tsvg {} -o {.}.svg
fi
touch "${1}/.lastgraph"
